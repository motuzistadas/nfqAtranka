{% extends "::base.html.twig" %}

{% import 'AppBundle::macros.html.twig' as macros %}

{% block title %} Admin | Orders list {% endblock %}

{% block body %}
<div class="admin-panel panel-info">
    <div class="admin-heading">
        <h3 class="text-center">Orders</h3>
    </div>
    <div class="well">

        {{ macros.search() }}

        <table class="table">
            <thead>
                <tr>
                    <th style="width: 15%;">{{ macros.orderBy(orderBy, 'id', 'Name') }}</th>
                    <th style="width: 15%;">{{ macros.orderBy(orderBy, 'name', 'Surname') }}</th>
                    <th style="width: 20%;">{{ macros.orderBy(orderBy, 'surname', 'Email') }}</th>
                    <th style="width: 20%;">Mobile</th>
                    <th style="width: 15%;">{{ macros.orderBy(orderBy, 'orderDate', 'Order Date') }}</th>
                    <th style="width: 15%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for order in pager.currentPageResults %}
                    <tr>
                        <td>{{ order.name }}</td>
                        <td>
                            {{ order.surname }}
                        </td>
                        <td>
                            {{ order.email }}
                        </td>
                        <td>
                            {{ order.mobile }}
                        </td>
                        <td>
                           {{ order.orderDate|date('Y-m-d') }}
                        </td>
                        <td>
                        <a
                            href="{{ path('admin_order_delete', {id: order.id, token: csrf_token('administration')}) }}"
                            class="requires-confirmation btn btn-danger btn-sm"><span>Delete</span>
                        </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {{ macros.pager(pager) }}

    </div>
</div>


{% endblock %}
